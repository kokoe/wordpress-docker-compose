{
  "name": "docker-docker-wordpress",
  "version": "1.0.0",
  "description": "Easy WordPress development with Docker and Docker Compose.",
  "scripts": {
    "start": "docker-compose up -d --build",
    "copy:env": "cp ./.env.dev ./.env -f",
    "dev": "npm run copy:env && docker-compose up -d --build",
    "fix:owner": "sudo chown -hR $(id -u):$(id -g) .",
    "up": "docker-compose up",
    "stop": "docker-compose stop",
    "rm": "docker-compose rm",
    "down": "docker-compose down",
    "down:db": "docker-compose down -v",
    "down:all": "docker-compose down --rmi all",
    "remove": "docker-compose down --rmi all --volumes --remove-orphans",
    "remove:mount": "sudo rm -rf wp-app/ wp-data/",
    "wp": "docker-compose run --rm wpcli"
  },
  "author": "@kokoe",
  "license": "MIT"
}
